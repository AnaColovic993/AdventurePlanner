@{
}
@model Adventure.Repository.Models.User

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login Page</title>
    <link rel=" stylesheet" href="~/css/IndexStyle.css" />
</head>
<body>
    <div class="form-area col-lg-offset-3">
        <input type="submit" id="register_btn" value="Register" onclick="location.href='@Url.Action("Register", "Home")'" />
        <h2>Login Form</h2>
        <form method="post" asp-action="Login" asp-controller="Home">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="example@gmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <p>Security Question</p>
            <select name="" id="">
                <option value="=">
                    What was your last adventure?
                </option>
                <option value="=">
                    Where was your last adventure?
                </option>
                <option value="=">
                    How much did cost your last adventure?
                </option>
            </select>
            <p></p>
            <input type="text" name="" id="" placeholder="Enter your answer">
            <input type="submit" value="Sign In" />

            <a href="#">Forgot Password?</a>

        </form>
    </div>
</body>
</html>
